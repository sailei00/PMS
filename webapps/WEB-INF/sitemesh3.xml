<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/jsp/views/decorator.jsp”所装饰 -->
    <mapping path="/*" decorator="/jsp/views/decorator.jsp" />

    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/login*" exclude="true" />
    <mapping path="/iteminpage*" exclude="true" />
    <mapping path="/item/queryforadd*" exclude="true" />
</sitemesh>